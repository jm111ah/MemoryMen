            display: grid;
            grid-template-columns: 1fr;
            gap: 25px;
            margin-bottom: 30px;
        }

        .project-image-item {
            background: white;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            border: 1px solid #e9ecef;
        }

        .project-image-item img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            margin-top: 15px;
        }

        .project-image-item h4 {
            margin: 0 0 10px 0;
            color: #495057;
            font-size: 1.1rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .project-image-item p {
            margin: 0 0 15px 0;
            color: #6c757d;
            font-size: 0.95rem;
            line-height: 1.5;
        }

        .project-image-item .code-section {
            margin-top: 15px;
        }

        .project-image-item .code-section h5 {
            margin: 0 0 10px 0;
            color: #495057;
            font-size: 1rem;
            display: flex;
            align-items: center;
            gap: 6px;
